= form_for [@project, @collection] do |f|
  - unless @collection.ancestry.nil?
    = f.hidden_field :ancestry, :value => @collection.ancestry
  -if @collection.errors.any?
    #error_explanation
      %h2= "#{pluralize(@collection.errors.count, "error")} prohibited this collection from being saved:"
      %ul
        - @collection.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .field    
    = f.label :tag_list, t("tags")
    = f.text_area :tag_list    
  .actions
    = f.submit 'Save'
