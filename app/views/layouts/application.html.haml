%head
	%meta{:charset=>"utf-8"}
	%meta{"http-equiv"=>"X-UA-Compatible", :content=>"IE=edge,chrome=1"}

	%title
		= content_for(:page_title) == '' ? t('site_name') : content_for(:page_title)
		= "STAGING" if Rails.env == "staging" 
		
	%meta{:name=>"description", :content=> content_for(:page_description) == '' ? t('site_description') : content_for(:page_description) }
	%meta{:name=>"author", :content=>""}

	%meta{:name=>"viewport", :content=>"width=device-width,initial-scale=1"}
	
	= stylesheet_link_tag    "application"
	= javascript_include_tag "application"
	
%body{:class => content_for(:body_class)}

	#container
		= render "/layouts/header"
		#main{:role=>"main"}
			/- if flash.notice
			/	.flash.notice= flash.notice
			/- if flash[:error]
			/	.flash.errors= flash[:error]
			= yield
		= render "/layouts/footer"

	
