= javascript_include_tag "assets"
%h1 Listing assets

%table
  %tr
    %th Name
    %th Mimetype
    %th Size
    %th Info
    %th
    %th
    %th

  - @assets.each do |asset|
    %tr
      %td= asset.name
      %td= asset.mimetype
      %td= asset.size
      %td= asset.info
      %td= link_to 'Show', resource_path(asset)
      %td= link_to 'Edit', edit_resource_path(asset)
      %td= link_to 'Destroy',  resource_path(asset), :confirm => 'Are you sure?', :method => :delete

%br

= link_to 'New Asset', new_resource_path
= link_to 'Back to collections', project_collections_path(@project)

