.item.asset
	%h3= link_to asset.file, project_collection_asset_path(asset.collection.project, asset.collection, asset)
	= "Created at: " + asset.created_at.strftime("%B %d, %Y")
	%br
	= "Size: " + number_to_human_size(asset.file.size.to_s)
	%br
	.actions
		= link_to 'Delete', project_collection_asset_path(asset.collection.project, asset.collection, asset), :confirm => 'Are you sure?', :method => :delete