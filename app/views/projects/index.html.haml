= javascript_include_tag "projects"
= stylesheet_link_tag "projects"
%h1 Projects

#projects
	- @projects.each do |project|
		.item.project{:rel=> project_collections_path(project)}
			%h3
				= link_to project.name, project
				.link
					= link_to project.url, project.url
			%br
			= "Created at: " + project.created_at.strftime("%B %d, %Y")
			%br
			= "Last Updated: " + project.updated_at.strftime("%B %d, %Y")
			.actions
				= link_to 'Delete', resource_path(project), :confirm => 'Are you sure? It will delete all collections and assets within', :method => :delete

	.addBtn.item
		= link_to 'New Project', new_project_path